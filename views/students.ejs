<%- include("_header") -%>

<h1>List of Students (<%= model.length %>)</h1>

<div class="table-responsive-sm">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Status</th>
        <th class="d-print-none">
          <a class="btn btn-sm btn-success" href="student/create">Add</a>
        </th>
      </tr>
    </thead>
    <tbody>
      <% for (const student of model) { %>
        <tr>
          <td><%= student.StudentID %></td>
          <td><%= student.Name %></td>
          <td><%= student.MobileNumber %></td>
          <td><%= student.Status %></td>
          <td class="d-print-none">
            <a class="btn btn-sm btn-warning" href="/edit/<%= student.StudentID %>">Edit</a>
            <a class="btn btn-sm btn-danger" href="/delete/<%= student.StudentID %>">Delete</a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<%- include("_footer") -%>
